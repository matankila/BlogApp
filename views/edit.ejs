<% include ./partials/header %>
            <div id="centerForm" >
                <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                    <h1>Edit Blog Form</h1>
                    <div class="field">
                    <input  name="blog[title]"  type="text" placeholder="Title" value="<%= blog.title %>" >
                    </div>
                    <div class="field">
                    <input name="blog[img]"  type="text" placeholder="Img URL"  value="<%= blog.img %>" >
                    </div>
                    <div class="field">
                    <textarea  name="blog[body]" rows="10" cols="50" placeholder="Blog Body" ><%= blog.body %></textarea>
                    </div>
                    <button class="ui button" type="submit">Save Changes!</button>
                </form>
            </div>
<% include ./partials/footer %>